{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "target": "es2020",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": "src",
        "paths": {
            "config/*": [
                "config/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}